#ifndef _INVENTORY_INCLUDED_
#define _INVENTORY_INCLUDED_
#include <string.h>
class record
{
  public:
  char item_num[10];
  char item_name[50];
  char address[100];
  char branch[50];
  char manu_comp[50];
  int num;
  float price;
  char address_manu[100];
  int flag;
  int null;
  record();
};
record::record()
{
  item_num[0]='\0';
  item_name[0]='\0';
  address[0]='\0';
  branch[0]='\0';
  manu_comp[0]='\0';
  address_manu[0]='\0';
  flag=0;
  null=0;
  num=0;
  price=0;
}
bool comp(record a,record b)
{
  if(strcmp(a.item_num,b.item_num)==0)
    return true;
  else
    return false;
}
#endif
